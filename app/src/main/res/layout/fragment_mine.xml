<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zero.yoga.MainActivity">


    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26px"
        android:src="@mipmap/yogachain_ic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPersonalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#121212"
            android:textSize="15sp"
            tools:text="Krishna Kumari" />

        <ImageView
            android:id="@+id/ivSex"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginStart="10px"
            android:src="@drawable/personal_ic_woman" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPersonalPhoneN0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:textColor="#808080"
        android:textSize="12sp"
        tools:text="18670301864" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24px"
        android:layout_marginTop="46px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMyCourseList"
            android:layout_width="228px"
            android:layout_height="228px"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/shape_textview_mine"
            android:drawablePadding="36px"
            android:drawableTop="@drawable/personal_ic_01"
            android:gravity="center_horizontal"
            android:paddingTop="30px"
            android:text="我的课程"
            android:textColor="#505050"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvFeedBack"
            android:layout_width="228px"
            android:layout_height="228px"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/shape_textview_mine"
            android:drawablePadding="36px"
            android:drawableTop="@drawable/personal_ic_02"
            android:gravity="center_horizontal"
            android:paddingTop="30px"
            android:text="意见反馈"
            android:textColor="#505050"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="228px"
            android:layout_height="228px"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/shape_textview_mine"
            android:drawablePadding="36px"
            android:drawableTop="@drawable/personal_ic_03"
            android:gravity="center_horizontal"
            android:paddingTop="30px"
            android:text="关于"
            android:textColor="#505050"
            android:textSize="14sp" />
    </LinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
